<Controls:MetroWindow x:Class="ERP.UI.Views.Hauptfenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:Icons="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        
                    
         xmlns:local="clr-namespace:ERP.UI.Views" 
          xmlns:viewmodel="clr-namespace:ERP.UI.ViewModel"
                      d:DataContext="{d:DesignInstance Type=viewmodel:HauptfensterViewModel}"
                      
                      Title="{x:Static local:Texte.AppTitel}"
                     
                      
        mc:Ignorable="d"
           
          
       Height="700" Width="1000"
                   
             WindowStartupLocation="CenterScreen"  
                      Background="{DynamicResource MahApps.Brushes.Background}"
                   
     >
   

        <Grid Background="{DynamicResource Menu}">
            <Grid.RowDefinitions>
                <!--  Titelleiste  -->
                <RowDefinition Height="35" />
                <!--  Aktive Arbeitsfläche  -->
                <RowDefinition />
            </Grid.RowDefinitions>

        <!--  App Logo  -->
        <Image
     Grid.Row="0"
     Width="22"
     Margin="5,3,0,0"
     HorizontalAlignment="Left"
     VerticalAlignment="Center"
     Source="/Bilder/ERP.ico" />


        <!--  Titel  -->
        <TextBlock
      Grid.Row="0"
      Margin="30,0,0,5"
      HorizontalAlignment="Left"
      VerticalAlignment="Bottom"
      FontFamily="Consolas"
      FontSize="10pt"
      Foreground="{DynamicResource Text}"
      Text="{x:Static local:Texte.AppTitel}" />


        <!--  Aktive Arbeitsfläche  -->
        <Grid Grid.Row="1">
            <ContentControl
         HorizontalContentAlignment="Center"
         VerticalContentAlignment="Center"
         Content="{Binding Benutzer.Oberfläche.Benutzeroberfläche}" />

        </Grid>
    </Grid>
</Controls:MetroWindow>
