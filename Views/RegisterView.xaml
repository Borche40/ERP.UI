<UserControl x:Class="ERP.UI.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERP.UI.Views"
             xmlns:viewmodel="clr-namespace:ERP.UI.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:HauptfensterViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource Menu}">
        <!--
    Diese Border wird verwendet,
    um den Schatteneffekt zu erzeugen.
    Wenn er direkt auf die darunterliegende Border mit
    den Daten angewendet wird, werden alle
    Steuerelemente unscharf.
-->

        <Border
            Width="308"
            Height="398"
            Background="{DynamicResource Korper}"
            BorderBrush="{DynamicResource BlauTaste}"
            BorderThickness="0.6"
            CornerRadius="20">

            <!--  Schatten  -->
            <Border.Effect>
                <DropShadowEffect
            BlurRadius="10"
            Direction="300"
            Opacity="0.3"
            ShadowDepth="30"
            Color="{DynamicResource Schatten}" />
            </Border.Effect>
        </Border>
        <Border
    Width="306"
    Height="396"
    Background="{DynamicResource Korper}"
    BorderBrush="{DynamicResource Seperator}"
    BorderThickness="0.3"
    CornerRadius="20">
            <Grid
        Width="300"
        Height="390"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="Transparent">

                <Grid.RowDefinitions>
                    <!--  AppTitel und AppIcon  -->
                    <RowDefinition Height="30" />
                    <!--  View Titel  -->
                    <RowDefinition Height="50" />
                    <!--  Fehler meldung  -->
                    <RowDefinition Height="40" />
                    <!--  Registrierung  -->
                    <RowDefinition Height="210" />
                    <!--  Zu Anmeldung View wechseln  -->
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--  AppIcon  -->
                <Image
            Grid.Row="0"
            Width="23"
            Margin="3,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Source="/Bilder/ERP_System_logo_resized.png" />
                <!--  AppTitel  -->
                <Label
            Grid.Row="0"
            Margin="23,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{x:Static local:Texte.AppTitel}"
            FontSize="10pt"
            Foreground="{DynamicResource Text}" />
                <!--  View Titel  -->
                <Label
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="{x:Static local:Texte.AppTitel}"
            FontSize="22pt"
            FontWeight="Medium"
            Foreground="{DynamicResource Text}" />
                <!--
            Um den Benutzer zu warnen,
            wenn ein Feld nicht ordnungsgemäß eingegeben wurde
        -->
                <TextBlock
            Grid.Row="2"
            Width="250"
            Height="30"
            Background="Transparent"
            FontFamily="Consolas"
            Foreground="red"
            Text="{Binding Benutzer.Authentifizierung.Registrierung.Nachricht}"
            TextWrapping="Wrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Benutzer.Authentifizierung.Registrierung.IstNachrichtBereit}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!--  Registrierungbereich  -->
                <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
                    <Grid>
                        <!--  Name  -->
                        <TextBox
                    x:Name="Benutzername"
                    Width="250"
                    Height="30"
                    Margin="5"
                    Padding="3"
                    VerticalContentAlignment="Center"
                    Foreground="{DynamicResource SupportTexte}"
                    Text="{Binding Benutzer.Authentifizierung.Registrierung.Name, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />
                        <!--  Textvorschlag für den Namen  -->
                        <TextBlock
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="10pt"
                    Foreground="{DynamicResource Hinweis}"
                    IsHitTestVisible="False"
                    Text="{x:Static local:Texte.Benutzername}">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=Benutzername}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    <!--  Email  -->
                    <Grid>
                        <TextBox
                    x:Name="BenutzerEmail"
                    Width="250"
                    Height="30"
                    Margin="5"
                    Padding="3"
                    VerticalContentAlignment="Center"
                    Foreground="{DynamicResource SupportTexte}"
                    PreviewKeyDown="PasswortÜbersprungen"
                    Text="{Binding Benutzer.Authentifizierung.Registrierung.Email, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />
                        <!--  Textvorschlag für die Email adresse  -->
                        <TextBlock
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="10pt"
                    Foreground="{DynamicResource Hinweis}"
                    IsHitTestVisible="False"
                    Text="{x:Static local:Texte.Email}">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=BenutzerEmail}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    <Grid>
                        <!--
                    Passwort anzeigen bei Tastendruck
                    und Datenbindung
                -->
                        <TextBox
                    x:Name="ZeigePasswort"
                    Width="250"
                    Height="30"
                    Margin="5"
                    Padding="3"
                    VerticalContentAlignment="Center"
                    Text="{Binding Benutzer.Authentifizierung.Registrierung.Passwort, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />
                        <!--  Passwort  -->
                        <PasswordBox
                    x:Name="Passwort"
                    Width="250"
                    Height="30"
                    Margin="5"
                    Padding="3"
                    VerticalContentAlignment="Center"
                    Foreground="{DynamicResource SupportTexte}"
                    MaxLength="8"
                    PasswordChanged="PasswortGeändert"
                    PreviewKeyDown="BestätigePasswortÜbersprungen" />
                        <!--  Passworttext  -->
                        <TextBlock
                    x:Name="PasswortTipp"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="10pt"
                    Foreground="{DynamicResource Hinweis}"
                    IsHitTestVisible="False"
                    Text="{x:Static local:Texte.Passwort}">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=ZeigePasswort, Mode=OneWay}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <!--  Verstecktes Passwort anzeigen  -->
                        <Button
                    Width="30"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Content="&#xE18B;"
                    Foreground="{DynamicResource SupportTexte}"
                    PreviewMouseDown="MausUnten"
                    PreviewMouseUp="MausOben"
                    Style="{DynamicResource BasisTaste}" />

                    </Grid>
                    <Grid>
                        <!--
                    BestätigePasswort anzeigen bei Tastendruck
                    und Datenbindung
                -->
                        <TextBox
                    x:Name="ZeigeBestätigePasswort"
                    Width="250"
                    Height="30"
                    Margin="5"
                    Padding="3"
                    VerticalContentAlignment="Center"
                    Foreground="{DynamicResource SupportTexte}"
                    Text="{Binding Benutzer.Authentifizierung.Registrierung.BestätigePasswort, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />
                        <!--  BestätigePasswort  -->
                        <PasswordBox
                    x:Name="BestätigePasswort"
                    Width="250"
                    Height="30"
                    Margin="5"
                    Padding="3"
                    VerticalContentAlignment="Center"
                    Foreground="{DynamicResource SupportTexte}"
                    MaxLength="8"
                    PasswordChanged="BestätigePasswortGeändert" />
                        <!--  BestätigePassworttext  -->
                        <TextBlock
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="10pt"
                    Foreground="{DynamicResource Hinweis}"
                    IsHitTestVisible="False"
                    Text="{x:Static local:Texte.BestätigePasswort}">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=ZeigeBestätigePasswort}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <!--  Verstecktes Passwort anzeigen  -->
                        <Button
                    Width="30"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Content="&#xE18B;"
                    Foreground="{DynamicResource SupportTexte}"
                    PreviewMouseDown="BestätigePasswortMausUnten"
                    PreviewMouseUp="BestätigePasswortMausOben"
                    Style="{DynamicResource BasisTaste}" />
                    </Grid>
                    <!--  Registrieren  -->
                    <Button
                Width="250"
                Height="30"
                Margin="5"
                Command="{Binding Benutzer.BenutzerRegistrieren}"
                Content="{x:Static local:Texte.Registrieren}"
                FontSize="14pt"
                FontWeight="Bold"
                Foreground="{DynamicResource Text}"
                Style="{DynamicResource MenuButtonStyle}" />

                </StackPanel>

                <!--  Zu Anmeldung wechseln  -->
                <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
                    <Label Content="{x:Static local:Texte.AnmeldenFrage}" Foreground="{DynamicResource Text}" />
                    <Button
                Width="60"
                Height="30"
                Command="{Binding Benutzer.Oberfläche.AnmeldungAnzeigen}"
                Content="{x:Static local:Texte.Anmelden}"
                Style="{DynamicResource Registrieren}" />
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</UserControl>
