<Window x:Class="ERP.UI.Views.NachrichtBoxView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP.UI.Views"
        xmlns:viewmodel="clr-namespace:ERP.UI.ViewModel"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="NachrichtBoxView" Height="450" Width="800">
    
        <Window.Resources>
            <BooleanToVisibilityConverter x:Key="IstOk" />
        </Window.Resources>
        <WindowChrome.WindowChrome>
            <WindowChrome
         CaptionHeight="0"
         CornerRadius="20"
         GlassFrameThickness="0.3"
         ResizeBorderThickness="0" />
        </WindowChrome.WindowChrome>

        <Window.InputBindings>

            <KeyBinding Key="Return" Command="{x:Static viewmodel:NachrichtBox.Ok}" />
            <KeyBinding Key="Esc" Command="{x:Static viewmodel:NachrichtBox.Abbrechen}" />


        </Window.InputBindings>

        <!--  Shadow effect  -->
        <Window.Effect>
            <DropShadowEffect
         BlurRadius="20"
         Direction="300"
         Opacity="0.2"
         ShadowDepth="40"
         Color="{DynamicResource Schatten}" />
        </Window.Effect>
        <Border
     Margin="0"
     HorizontalAlignment="Stretch"
     VerticalAlignment="Stretch"
     Background="#4C000000"
     CornerRadius="10">

            <Grid
         Width="320"
         MinHeight="200"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
         Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>

                <Border
             Grid.Row="0"
             Grid.RowSpan="2"
             Margin="-2"
             Padding="4"
             Background="{DynamicResource NachrichtBox.Oben}"
             BorderBrush="{DynamicResource GrauTaste}"
             BorderThickness="1"
             CornerRadius="10" />
                <Border
             Grid.Row="0"
             Background="{DynamicResource NachrichtBox.Oben}"
             BorderBrush="{DynamicResource GrauTaste}"
             CornerRadius="10 10 0 0" />

                <StackPanel Grid.Row="0" Orientation="Vertical">

                    <StackPanel Orientation="Horizontal">
                        <Image
                     Width="28"
                     Margin="5"
                     Source="/Bilder/ERP.ico" />
                        <!--  Titel  -->
                        <TextBlock
                     Margin="3,20"
                     FontFamily="Consolas"
                     FontSize="16pt"
                     FontWeight="DemiBold"
                     Foreground="{DynamicResource Text}"
                     Text="{x:Static local:Texte.AppTitel}" />
                    </StackPanel>
                    <!--  Nachricht  -->
                    <TextBlock
                 Margin="15,0,10,5"
                 VerticalAlignment="Center"
                 FontFamily="Consolas"
                 FontSize="11pt"
                 FontWeight="Regular"
                 Foreground="{DynamicResource Text}"
                 Text="{x:Static viewmodel:NachrichtBox.Nachricht}"
                 TextWrapping="Wrap" />
                </StackPanel>

                <Border
             Grid.Row="1"
             Background="{DynamicResource NachrichtBox.Unten}"
             BorderBrush="{DynamicResource GrauTaste}"
             CornerRadius="0 0 10 10" />

                <!--  Ja Nein  -->
                <Grid
             Grid.Row="1"
             Margin="20,20,20,20"
             Background="{DynamicResource NachrichtBox.Unten}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />

                    </Grid.ColumnDefinitions>

                    <Button
                 Grid.Column="0"
                 Margin="0,0,5,0"
                 Command="{x:Static viewmodel:NachrichtBox.Ja}"
                 Content="{x:Static local:Texte.Ja}"
                 FontFamily="Consolas"
                 FontWeight="Medium"
                 Style="{DynamicResource MahApps.Styles.Button.Split}" />

                    <Button
                 Grid.Column="1"
                 Margin="5,0,5,0"
                 Command="{x:Static viewmodel:NachrichtBox.Nein}"
                 Content="{x:Static local:Texte.Nein}"
                 FontFamily="Consolas"
                 FontWeight="Medium"
                 Style="{DynamicResource GraueTaste}" />

                    <Button
                 Grid.Column="2"
                 Margin="5,0,0,0"
                 Command="{x:Static viewmodel:NachrichtBox.Abbrechen}"
                 Content="{x:Static local:Texte.Abbrechen}"
                 FontFamily="Consolas"
                 FontWeight="Medium"
                 Style="{DynamicResource GraueTaste}" />

                </Grid>
                <!--  OK  -->
                <Grid
             Grid.Row="1"
             Margin="20,15,20,15"
             Background="{DynamicResource NachrichtBox.Unten}"
             Visibility="{x:Static viewmodel:NachrichtBox.OkFenster}">

                <Button
                 Width="150"
                 Margin="0,5,0,5"
                 Command="{x:Static viewmodel:NachrichtBox.Ok}"
                 Content="{x:Static local:Texte.Ok}"
                 FontFamily="Consolas"
                 FontWeight="Medium"
                 Foreground="{DynamicResource Text}"
                Style="{DynamicResource GraueTaste}"/>

            </Grid>

            </Grid>

        </Border>
    
</Window>
